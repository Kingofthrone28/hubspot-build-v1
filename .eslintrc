{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "plugins": ["eslint-plugin-html"],
  "root": true,
  "rules": {
    "class-methods-use-this": 0,
    // TODO: revisit
    "func-names": 0,
    "import/no-namespace": 1,
    "import/order": 1,
    "lines-between-class-members": [
      1,
      "always",
      { "exceptAfterSingleLine": true }
    ],
    "no-console": 0,
    "no-empty": 1,
    "no-plusplus": 0,
    // TODO: revisit?
    "no-restricted-syntax": 0,
    "no-shadow": 1,
    // TODO: remove after testing
    "no-undef": 0,
    "no-unused-vars": 1,
    "no-use-before-define": 1,
    "no-useless-catch": 1,
    "object-shorthand": 1,
    "prefer-arrow-callback": 1,
    "prefer-destructuring": 1,
    "prefer-template": 1,
    "radix": [1, "as-needed"],
    "spaced-comment": 1
  }
}

